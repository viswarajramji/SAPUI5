<mvc:View xmlns:cards="sap.f.cards" xmlns:richtexteditor="sap.ui.richtexteditor" xmlns:codeeditor="sap.ui.codeeditor" xmlns:unified="sap.ui.unified" xmlns:layout="sap.ui.layout" xmlns:dnd="sap.ui.core.dnd" xmlns:f="sap.f" xmlns:table="sap.ui.table" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns:uxap="sap.uxap"
	controllerName="country.controller.Details" xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:mvc="sap.ui.core.mvc"
	>
	<tnt:ToolHeader >
		<tnt:content>
			<m:Button icon="sap-icon://menu" press="expand"></m:Button>
			<m:MenuButton text="File">
					<m:menu>
						<m:Menu >
							<m:items>
								<m:MenuItem text="test" ></m:MenuItem>
							</m:items>
						</m:Menu>
					</m:menu>
			</m:MenuButton>
			<m:ToolbarSpacer ></m:ToolbarSpacer>
			<m:SearchField width="17.5rem"></m:SearchField>
			<m:MenuButton icon="sap-icon://user-settings" >
				<m:menu>
					<m:Menu>
						<m:items>
							<m:MenuItem text="profile" icon="sap-icon://user-edit"></m:MenuItem>
							<m:MenuItem text="logout" icon="sap-icon://system-exit"></m:MenuItem>
						</m:items>
					</m:Menu>
				</m:menu>
			</m:MenuButton>
		</tnt:content>

	</tnt:ToolHeader>
	<tnt:SideNavigation id="sideNavigation">
		<tnt:item>
			<tnt:NavigationList >
				<tnt:NavigationListItem text="tet"></tnt:NavigationListItem>
			</tnt:NavigationList>
		</tnt:item>
	</tnt:SideNavigation>
<uxap:ObjectPageLayout toggleHeaderOnTitleClick="false" showFooter="true" id="pageLayout">

	<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle >
				
				<uxap:heading>
					
					<m:Title text="{country>countryName}"></m:Title>
				
				</uxap:heading>
				<uxap:actions>
					<m:Button text="X" type="Transparent" press="closeDetails"></m:Button>
				</uxap:actions>
				<uxap:expandedContent>
					<m:Text text="{country>countryCode}"></m:Text>
				</uxap:expandedContent>
				<uxap:snappedContent>
					<m:Text text="{country>countryCode}"></m:Text>
				</uxap:snappedContent>
			</uxap:ObjectPageDynamicHeaderTitle>
	</uxap:headerTitle>
	<uxap:sections >


		<uxap:ObjectPageSection title="Actions" id="Actions">
			<uxap:subSections>
				<uxap:ObjectPageSubSection >
					<uxap:blocks>
						<f:Card width="300px">
							<f:header>
								<cards:Header 
								title="Buy bus ticket on-line"
								subtitle="Buy a single-ride ticket for a date"
								iconSrc="sap-icon://bus-public-transport"
								 ></cards:Header>
							</f:header>
							<f:content>
							 <m:VBox>
								<m:HBox justifyContent="SpaceBetween" class="sapUiSmallMargin">
									<m:Input  placeholder="From City"	width="120px" class="sapUiSmallMarginEnd"  ></m:Input>
									<m:Input  placeholder="To City" 	width="120px"></m:Input>
								</m:HBox>
								<m:HBox justifyContent="SpaceBetween" class="sapUiSmallMargin">
									<m:items>
										<m:DateTimePicker  placeholder="select Date" showCurrentDateButton="true"></m:DateTimePicker>
										<m:Button type="Emphasized" text="Search" class="sapUiMediumMarginBegin"></m:Button>
									</m:items>
								</m:HBox>
							</m:VBox>
							</f:content>
						</f:Card>
			     	</uxap:blocks>
				</uxap:ObjectPageSubSection>
			</uxap:subSections>
		</uxap:ObjectPageSection>



	</uxap:sections>
	<uxap:footer>
		<m:OverflowToolbar >
			<m:content>
			</m:content>
		</m:OverflowToolbar>
	</uxap:footer>

	<uxap:dependents>
	</uxap:dependents>
</uxap:ObjectPageLayout>

</mvc:View>
