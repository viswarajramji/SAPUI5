	controllerName="country.controller.Details"
	xmlns:mvc="sap.ui.core.mvc"
	>
	<tnt:ToolHeader >
		<tnt:content>
			<m:Button icon="sap-icon://menu" press="expand"></m:Button>
			<m:MenuButton text="File">
					<m:menu>
						<m:Menu >
							<m:items>
								<m:MenuItem text="test" ></m:MenuItem>
							</m:items>
						</m:Menu>
					</m:menu>
			</m:MenuButton>
			<m:ToolbarSpacer ></m:ToolbarSpacer>
			<m:SearchField width="17.5rem"></m:SearchField>
			<m:MenuButton icon="sap-icon://user-settings" >
				<m:menu>
					<m:Menu>
						<m:items>
							<m:MenuItem text="profile" icon="sap-icon://user-edit"></m:MenuItem>
							<m:MenuItem text="logout" icon="sap-icon://system-exit"></m:MenuItem>
						</m:items>
					</m:Menu>
				</m:menu>
			</m:MenuButton>
		</tnt:content>

	</tnt:ToolHeader>
	<tnt:SideNavigation id="sideNavigation">
		<tnt:item>
			<tnt:NavigationList >
				<tnt:NavigationListItem text="tet"></tnt:NavigationListItem>
			</tnt:NavigationList>
		</tnt:item>
	</tnt:SideNavigation>
<uxap:ObjectPageLayout toggleHeaderOnTitleClick="false" showFooter="true" id="pageLayout">

	<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle >
				
				<uxap:heading>
					
					<m:Title text="{country>countryName}"></m:Title>
				
				</uxap:heading>
				<uxap:actions>
					<m:Button text="X" type="Transparent" press="closeDetails"></m:Button>
				</uxap:actions>
				<uxap:expandedContent>
					<m:Text text="{country>countryCode}"></m:Text>
				</uxap:expandedContent>
				<uxap:snappedContent>
					<m:Text text="{country>countryCode}"></m:Text>
				</uxap:snappedContent>
			</uxap:ObjectPageDynamicHeaderTitle>
	</uxap:headerTitle>
	<uxap:sections >
			<uxap:ObjectPageSection title="Basic Details"  >
				<uxap:subSections>
					<uxap:ObjectPageSubSection >
						<uxap:blocks>
								<m:Text text="{country>countryName}">	</m:Text>
								<m:Text text="{
											path:'country>/date',
											type:'sap.ui.model.type.Date',
											formatOptions: {
												style:'short'
											}
										}">	</m:Text>
								<m:DatePicker value="{
														path:'country>/datetime',
														type:'sap.ui.model.type.Date',
														formatOptions: {
															style:'long'
														}
													}"></m:DatePicker>



								<m:DateTimePicker value="{
									path:'country>/datetime',
									type:'sap.ui.model.type.DateTime',
									formatOptions: {
										style:'full'
									}
								}"></m:DateTimePicker>




								<m:Text text=" date {
									path:'country>/datetext',
									type:'sap.ui.model.type.Date',
									formatOptions: {
										style:'short',
										source:{
											pattern:'MM/dd/yyyy'
										}
									}
								}" >	</m:Text>
													
								<m:Input value="{
									path:'country>cost',
									type:'sap.ui.model.type.Currency',
									formatOptions: {
										minIntegerDigits:1,
										maxIntegerDigits:3,
										maxFractionDigits:2
									}
								
								}" 
								
								description="{
									path:'country>cost',
									type:'sap.ui.model.type.Currency',
									formatOptions: {
										minIntegerDigits:1,
										maxIntegerDigits:3,
										maxFractionDigits:2
									}
								
								}" valueLiveUpdate="true"
								></m:Input>
						

								<m:Text text="{
									path: 'country>/filesize',
									type: 'sap.ui.model.type.FileSize',
									formatOptions: {
										maxIntegerDigits:3
										
									}
								}"></m:Text>


								<m:Text text="{
										path: 'country>/floatValue',
										type: 'sap.ui.model.type.Float',
										formatOptions: {
											maxIntegerDigits:4,
											minIntegerDigits:2,
											minFractionDigits:5
										}
								}"></m:Text>

								<m:Text text="{
									path: 'country>/integerValue',
									type: 'sap.ui.model.type.Integer',
									formatOptions: {
										minIntegerDigits:5
									}
								}"></m:Text>

								<m:Text text="{
									path: 'country>/timedata',
									type: 'sap.ui.model.type.Time',
									formatOptions: {
										style:'full'
									}
								}"></m:Text>

							
					
								<m:Button type="Default" text="load the dailoag" press=".loadFragment"> </m:Button>
								<m:Button type="Default" text="load the dailoag" press=".loadFragmentLight"> </m:Button>

								<m:Button type="Default" text="Dailog" press=".dailogPress"> </m:Button>
								<m:Button type="Default" text="MessageBox1" press=".MessageBox1"> </m:Button>
								<m:Button type="Default" text="showMessagePop" press=".MessageBox2"> </m:Button>
								<m:Button type="Default" text="messageToast" press=".MessageToast"> </m:Button>
								<m:Button type="Default" text="P13n dailog" press=".p13ndailog"> </m:Button>
								<m:Button type="Default" text="pop" press=".popover"> </m:Button>
								<m:Button type="Default" text="quickView" press=".quickview"> </m:Button>
								<m:Button type="Default" text="selectionDailog" press=".selectDailog">
									<m:customData>
										<core:CustomData key="title" value="userdata"></core:CustomData>
										<core:CustomData key="multiSelect" value="true"></core:CustomData>
										<core:CustomData key="noDataText" value="no data babe"></core:CustomData>
										<core:CustomData key="rememberSelections" value="true"></core:CustomData>
										<core:CustomData key="name" value="viswa"></core:CustomData>
									</m:customData>
								</m:Button>
								<m:Button type="Default" text="tableDialog" press=".tableDialog"> 
									<m:customData>
										<core:CustomData key="remember" value="true"></core:CustomData>
										<core:CustomData key="mutli" value="true"></core:CustomData>
										<core:CustomData key="draggable" value="true"></core:CustomData>
										<core:CustomData key="resizable" value="true"></core:CustomData>
									</m:customData>
								</m:Button>
								<m:Button type="Default" text="viewsetting" press=".viewsettings"> </m:Button>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="More Details" >
				<uxap:subSections>
					<uxap:ObjectPageSubSection >
						<uxap:blocks>
