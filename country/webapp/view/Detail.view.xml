<mvc:View xmlns:richtexteditor="sap.ui.richtexteditor" xmlns:codeeditor="sap.ui.codeeditor" xmlns:unified="sap.ui.unified" xmlns:layout="sap.ui.layout" xmlns:dnd="sap.ui.core.dnd" xmlns:f="sap.f" xmlns:table="sap.ui.table" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns:uxap="sap.uxap"
	controllerName="country.controller.Details" xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:mvc="sap.ui.core.mvc"
	>
	<tnt:ToolHeader >
		<tnt:content>
			<m:Button icon="sap-icon://menu" press="expand"></m:Button>
			<m:MenuButton text="File">
					<m:menu>
						<m:Menu >
							<m:items>
								<m:MenuItem text="test" ></m:MenuItem>
							</m:items>
						</m:Menu>
					</m:menu>
			</m:MenuButton>
			<m:ToolbarSpacer ></m:ToolbarSpacer>
			<m:SearchField width="17.5rem"></m:SearchField>
			<m:MenuButton icon="sap-icon://user-settings" >
				<m:menu>
					<m:Menu>
						<m:items>
							<m:MenuItem text="profile" icon="sap-icon://user-edit"></m:MenuItem>
							<m:MenuItem text="logout" icon="sap-icon://system-exit"></m:MenuItem>
						</m:items>
					</m:Menu>
				</m:menu>
			</m:MenuButton>
		</tnt:content>

	</tnt:ToolHeader>
	<tnt:SideNavigation id="sideNavigation">
		<tnt:item>
			<tnt:NavigationList >
				<tnt:NavigationListItem text="tet"></tnt:NavigationListItem>
			</tnt:NavigationList>
		</tnt:item>
	</tnt:SideNavigation>
<uxap:ObjectPageLayout toggleHeaderOnTitleClick="false" showFooter="true" id="pageLayout">

	<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle >
				
				<uxap:heading>
					
					<m:Title text="{country>countryName}"></m:Title>
				
				</uxap:heading>
				<uxap:actions>
					<m:Button text="X" type="Transparent" press="closeDetails"></m:Button>
				</uxap:actions>
				<uxap:expandedContent>
					<m:Text text="{country>countryCode}"></m:Text>
				</uxap:expandedContent>
				<uxap:snappedContent>
					<m:Text text="{country>countryCode}"></m:Text>
				</uxap:snappedContent>
			</uxap:ObjectPageDynamicHeaderTitle>
	</uxap:headerTitle>
	<uxap:sections >


		<uxap:ObjectPageSection title="Actions" id="Actions">
			<uxap:subSections>
				<uxap:ObjectPageSubSection >
					<uxap:blocks>
	
							<m:Table id="idDetailTable"
							items="{products>/ProductCollection}"
							growing="true"
							growingThreshold="10"
							growingScrollToLoad="true">
							<m:headerToolbar>
								<m:OverflowToolbar >
									<m:content>
										<m:Title text="Products"></m:Title>
										<m:ToolbarSpacer ></m:ToolbarSpacer>
										<m:ComboBox>
											<m:items>
												<core:Item key="Block" text="Block"></core:Item>
												<core:Item key="Grid Large" text="Grid Large"></core:Item>
												<core:Item key="Grid Small" text="Grid Small"></core:Item>
											</m:items>
										</m:ComboBox>
										<m:Text text="Sticky Notes"></m:Text>
										<m:CheckBox text="Column Header"></m:CheckBox>
										<m:CheckBox text="Header Toolbar"></m:CheckBox>
										<m:CheckBox text="InfoToolbarr"></m:CheckBox>
										<m:ToggleButton text="Hide/show" press="displayInfo"></m:ToggleButton>
										<m:Button icon="sap-icon://download" press="download"></m:Button>
									</m:content>
								</m:OverflowToolbar>
							</m:headerToolbar>
							<m:infoToolbar>
								<m:OverflowToolbar >
									<m:content>
										<m:Text text="wide range of products"></m:Text>
									</m:content>
								</m:OverflowToolbar>
							</m:infoToolbar>
								<m:columns>
									<m:Column>
										<m:Text text="product"></m:Text>
									</m:Column>
									<m:Column>
										<m:Text text="supplier"></m:Text>
									</m:Column>
									<m:Column>
										<m:Text text="dimensions"></m:Text>
									</m:Column>
									<m:Column>
										<m:Text text="weight"></m:Text>
									</m:Column>
									<m:Column>
										<m:Text text="price"></m:Text>
									</m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem >
											<m:ObjectIdentifier title="{products>Name}" text="{products>ProductId}"></m:ObjectIdentifier>
											<m:Text text="{products>ProductId}"></m:Text>
											<m:Text text="{products>Width} X {products>Height} X {products>Depth}"></m:Text>
											
											<m:ObjectIdentifier text="{products>ProductId}"></m:ObjectIdentifier>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
					</uxap:blocks>
				</uxap:ObjectPageSubSection>
			</uxap:subSections>
		</uxap:ObjectPageSection>



	</uxap:sections>
	<uxap:footer>
		<m:OverflowToolbar >
			<m:content>
			</m:content>
		</m:OverflowToolbar>
	</uxap:footer>

	<uxap:dependents>
	</uxap:dependents>
</uxap:ObjectPageLayout>

</mvc:View>
