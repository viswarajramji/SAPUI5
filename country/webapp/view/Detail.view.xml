<mvc:View xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns:uxap="sap.uxap"
	controllerName="country.controller.Details"
	xmlns:mvc="sap.ui.core.mvc"
	>
	<tnt:ToolHeader >
		<tnt:content>
			<m:Button icon="sap-icon://menu" press="expand"></m:Button>
			<m:MenuButton text="File">
					<m:menu>
						<m:Menu >
							<m:items>
								<m:MenuItem text="test" ></m:MenuItem>
							</m:items>
						</m:Menu>
					</m:menu>
			</m:MenuButton>
			<m:ToolbarSpacer ></m:ToolbarSpacer>
			<m:SearchField width="17.5rem"></m:SearchField>
			<m:MenuButton icon="sap-icon://user-settings" >
				<m:menu>
					<m:Menu>
						<m:items>
							<m:MenuItem text="profile" icon="sap-icon://user-edit"></m:MenuItem>
							<m:MenuItem text="logout" icon="sap-icon://system-exit"></m:MenuItem>
						</m:items>
					</m:Menu>
				</m:menu>
			</m:MenuButton>
		</tnt:content>

	</tnt:ToolHeader>
	<tnt:SideNavigation id="sideNavigation">
		<tnt:item>
			<tnt:NavigationList >
				<tnt:NavigationListItem text="tet"></tnt:NavigationListItem>
			</tnt:NavigationList>
		</tnt:item>
	</tnt:SideNavigation>
<uxap:ObjectPageLayout toggleHeaderOnTitleClick="false"  >

	<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle >
				
				<uxap:heading>
					
					<m:Title text="{country>countryName}"></m:Title>
				
				</uxap:heading>
				<uxap:actions>
					<m:Button text="X" type="Transparent" press="closeDetails"></m:Button>
				</uxap:actions>
				<uxap:expandedContent>
					<m:Text text="{country>countryCode}"></m:Text>
				</uxap:expandedContent>
				<uxap:snappedContent>
					<m:Text text="{country>countryCode}"></m:Text>
				</uxap:snappedContent>
			</uxap:ObjectPageDynamicHeaderTitle>
	</uxap:headerTitle>
	<uxap:sections>
			<uxap:ObjectPageSection title="Basic Details" >
				<uxap:subSections>
					<uxap:ObjectPageSubSection >
						<uxap:blocks>
								<m:Text text="{country>countryName}">	</m:Text>
								<m:Text text="{
											path:'country>/date',
											type:'sap.ui.model.type.Date',
											formatOptions: {
												style:'short'
											}
										}">	</m:Text>
								<m:DatePicker value="{
														path:'country>/datetime',
														type:'sap.ui.model.type.Date',
														formatOptions: {
															style:'long'
														}
													}"></m:DatePicker>



								<m:DateTimePicker value="{
									path:'country>/datetime',
									type:'sap.ui.model.type.DateTime',
									formatOptions: {
										style:'full'
									}
								}"></m:DateTimePicker>




								<m:Text text=" date {
									path:'country>/datetext',
									type:'sap.ui.model.type.Date',
									formatOptions: {
										style:'short',
										source:{
											pattern:'MM/dd/yyyy'
										}
									}
								}" >	</m:Text>
													
								<m:Input value="{
									path:'country>cost',
									type:'sap.ui.model.type.Currency',
									formatOptions: {
										minIntegerDigits:1,
										maxIntegerDigits:3,
										maxFractionDigits:2
									}
								
								}" 
								
								description="{
									path:'country>cost',
									type:'sap.ui.model.type.Currency',
									formatOptions: {
										minIntegerDigits:1,
										maxIntegerDigits:3,
										maxFractionDigits:2
									}
								
								}" valueLiveUpdate="true"
								></m:Input>
						

								<m:Text text="{
									path: 'country>/filesize',
									type: 'sap.ui.model.type.FileSize',
									formatOptions: {
										maxIntegerDigits:3
										
									}
								}"></m:Text>
								<m:HBox fitContainer="true">
								<m:Button type="Emphasized" icon="sap-icon://accept"></m:Button>
								<m:Button type="Accept" text="hello" enabled="false"> </m:Button>
								<m:Button type="Reject" text="hello"> </m:Button>
								<m:Button type="Transparent" text="hello"> </m:Button>
								<m:Button type="Unstyled" text="hello"> </m:Button>
								</m:HBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="More Details" >
				<uxap:subSections>
					<uxap:ObjectPageSubSection >
						<uxap:blocks>
								<m:MessageStrip text="hello word" close="alertClose" showCloseButton="true"></m:MessageStrip>
								<tnt:InfoLabel text="{country>countryCode}" colorScheme="{

									    formatter: '.formatter.selectTagColor',
										parts: ['country>countryCode','country>countryCode']
 
													}"></tnt:InfoLabel>

									<m:Link text="show me babe" href="https://www.google.com" press=".alert"></m:Link>
									<m:Slider value="100%"></m:Slider>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
	</uxap:sections>
	<uxap:footer>

	</uxap:footer>


</uxap:ObjectPageLayout>

</mvc:View>
