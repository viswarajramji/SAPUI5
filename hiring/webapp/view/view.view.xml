<mvc:View
    controllerName="hiring.controller.view"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page
					enableScrolling="true"
					title="{i18n>title}" >
					<content >
						<mvc:XMLView viewName="hiring.view.ListPanel"  ></mvc:XMLView>
						<mvc:XMLView viewName="hiring.view.AddUser"  ></mvc:XMLView>
					</content>
					<footer>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<Button
								activeIcon="sap-icon://save"
								icon="sap-icon://save"
								type="Accept" text="Save" press="save">
							</Button>
						</OverflowToolbar>
					</footer>
			
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
