<mvc:View
    controllerName="test.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page  title="{i18n>title}">
					<mvc:XMLView viewName="test.view.Secondary"/>
					<mvc:XMLView viewName="test.view.ListItems"/>
					<footer>
						<Toolbar>
							<content>
								<ToolbarSpacer ></ToolbarSpacer>
								<OverflowToolbar >
									<content>
										<Button text="{i18n>reject}" type="Reject"/>
										<Button text="{i18n>accept}" type="Accept"/>
									</content>
								</OverflowToolbar>
							</content>
						</Toolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
