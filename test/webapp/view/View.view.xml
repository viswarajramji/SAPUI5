<mvc:View
    controllerName="test.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Button text="press me" press=".press"></Button>
						<Input value="{/user/name}" description="hello {/user/name}" width="60%"></Input>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
