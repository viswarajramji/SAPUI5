<mvc:View xmlns:cssgrid="sap.ui.layout.cssgrid" xmlns:form="sap.ui.layout.form" xmlns:filterbar="sap.ui.comp.filterbar" xmlns:cards="sap.f.cards" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout"
    controllerName="actions.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page>
					<content>
						<VBox >
							<NavContainer id="navContainer"  width="100%" height="500px">
								<Page id="page1">
									<content>
										<Text text="Page1"></Text>
									</content>	
								</Page>
								<Page id="page2" >
									<content>
										<Text text="Page2"></Text>
									</content>	
								</Page>
							</NavContainer>
						</VBox>
						<HBox >
							<Button  text="Page1" press="changePage">
								<customData>
									<core:CustomData key="target" value="page1"></core:CustomData>
								</customData>
							</Button>
							<Button  text="Page2" press="changePage">
								<customData>
									<core:CustomData key="target" value="page2"></core:CustomData>
								</customData>
							</Button>
						</HBox>

					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
