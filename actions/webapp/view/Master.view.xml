<mvc:View xmlns:cssgrid="sap.ui.layout.cssgrid" xmlns:form="sap.ui.layout.form" xmlns:filterbar="sap.ui.comp.filterbar" xmlns:cards="sap.f.cards" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout"
    controllerName="actions.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<ScrollContainer class="sapUiMediumMargin" >
					<Button text="Reveal Grid"></Button>
					<Panel headerText="Grid Container Properties" >
						<content>
								<HBox  alignItems="Center" >
									<items>
										<Text text="Snap to Row" class="sapUiSmallMarginEnd"></Text>
										<Switch type="AcceptReject" class="sapUiSmallMarginEnd"></Switch>
										<Text text="(Should the items stretch to fill the rows which they occupy, or not. If turned on the items will stretch.)"></Text>
									</items>
								</HBox>
						</content>
					</Panel>
					<Panel >
						<content>
							<Label text="Current grid columns count: 11"></Label>
						</content>
					</Panel>
					<f:GridContainer class="sapUiSmallMargin"  >

						<GenericTile header="Sales Fulfilment" subheader="Subtile">
							<TileContent unit="EUR" footer="Current Quator"  >
								<ImageContent  src="sap-icon://world"></ImageContent>
							</TileContent>
							<layoutData>
								<cssgrid:GridItemLayoutData ></cssgrid:GridItemLayoutData>
							</layoutData>
						</GenericTile>

						<GenericTile header="Sales Fulfilment" subheader="Subtile">
							<TileContent unit="EUR" footer="Current Quator"  >
								<ImageContent  src="sap-icon://world"></ImageContent>
							</TileContent>
						</GenericTile>

					</f:GridContainer>
				</ScrollContainer>
			</pages>
		</App>
	</Shell>
</mvc:View>
