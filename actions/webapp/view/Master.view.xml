<mvc:View xmlns:cards="sap.f.cards" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout"
    controllerName="actions.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<layout:ResponsiveSplitter defaultPane="default">
						<layout:PaneContainer >
							<layout:SplitPane  requiredParentWidth="400" id="default" >
								<Panel >
									<Select forceSelection="true">
										<core:Item key="1" text="1"></core:Item>
										<core:Item key="2" text="2"></core:Item>
										<core:Item key="3" text="3"></core:Item>
									</Select>
								</Panel>
							</layout:SplitPane>
							<layout:PaneContainer orientation="Vertical">
								<layout:SplitPane >
									<Panel >
										<Select forceSelection="true">
											<core:Item key="1" text="1"></core:Item>
											<core:Item key="2" text="2"></core:Item>
											<core:Item key="3" text="3"></core:Item>
										</Select>
									</Panel>
								</layout:SplitPane>
								<layout:SplitPane >
									<Panel >
										<Select forceSelection="true">
											<core:Item key="1" text="1"></core:Item>
											<core:Item key="2" text="2"></core:Item>
											<core:Item key="3" text="3"></core:Item>
										</Select>
									</Panel>
								</layout:SplitPane>
							</layout:PaneContainer>
						</layout:PaneContainer>
					</layout:ResponsiveSplitter>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
