<mvc:View xmlns:layout="sap.ui.layout"
    controllerName="actions.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
						<layout:DynamicSideContent 	
						class="sapUiDSCExplored sapUiContentPadding"
						sideContentFallDown="BelowM"
						containerQuery="true"
						breakpointChanged="handleBreakpointChanged">
							<Title text="Main content Area"></Title>
							<Text text="hello world this is viswa"></Text>
							<layout:sideContent>
								<Title text="this is title content"></Title>
								<Text text="this is second world"></Text>
							</layout:sideContent>
						</layout:DynamicSideContent>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
