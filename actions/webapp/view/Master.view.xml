<mvc:View xmlns:filterbar="sap.ui.comp.filterbar" xmlns:cards="sap.f.cards" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout"
    controllerName="actions.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
					<f:DynamicPage >
						<f:content>
							
						</f:content>
						<f:footer>
						</f:footer>
						<f:header>
							<f:DynamicPageHeader >
								<filterbar:FilterBar
									showGoOnFB="true"
									useToolbar="true"
									
								>
									<filterbar:filterItems>
										<filterbar:FilterItem
											label="Product Id"
											mandatory="true"
											name="Product Id">
											<filterbar:control>
												<Input type="Text"></Input>
											</filterbar:control>
										</filterbar:FilterItem>

										<filterbar:FilterItem
											label="Product Name"
											mandatory="true"
											name="Product Name">
											<filterbar:control>
												<Input type="Text"></Input>
											</filterbar:control>
										</filterbar:FilterItem>

										<filterbar:FilterItem
											label="Product Type"
											mandatory="false"
											name="Product Type"
											visibleInFilterBar="false">
											<filterbar:control>
												<Input type="Text"></Input>
											</filterbar:control>
										</filterbar:FilterItem>



									</filterbar:filterItems>
								</filterbar:FilterBar>
							</f:DynamicPageHeader>
						</f:header>
						<f:title>
							<f:DynamicPageTitle >
								<f:heading>
									<Title text="My Products" level="H1"></Title>
								</f:heading>
								<f:actions>
									<Button type="Transparent" text="Global Action"></Button>
									<Button type="Transparent" text="Toggle "></Button>
								</f:actions>
							</f:DynamicPageTitle>
						</f:title>
						
					</f:DynamicPage>
			</pages>
		</App>
	</Shell>
</mvc:View>
