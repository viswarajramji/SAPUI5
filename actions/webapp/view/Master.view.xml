<mvc:View xmlns:cards="sap.f.cards" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout"
    controllerName="actions.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}" showNavButton="true" class="sapUiContentPadding">
					<headerContent>
						<Button icon="sap-icon://action"></Button>
					</headerContent>
					<subHeader>
						<Toolbar >
		
								<SearchField >
									<layoutData>
										<ToolbarLayoutData shrinkable="false"></ToolbarLayoutData>
									</layoutData>
								</SearchField>
						</Toolbar>
					</subHeader>
					<content>	
						<Toolbar >

							<Label text="This is a long non-shrinkable label.">
								<layoutData>
									<ToolbarLayoutData shrinkable="true"></ToolbarLayoutData>
								</layoutData>
							</Label>
						</Toolbar>
						<Label ></Label>
						<Bar>
							<contentLeft>
								<Label text="This is a long non-shrinkable label."/>
							</contentLeft>
						</Bar>
						<OverflowToolbar >
							<Label text="This is a long non-shrinkable label."/>
						</OverflowToolbar>
					</content>
					<footer>
						<OverflowToolbar >
							<ToolbarSpacer></ToolbarSpacer>
							<Button type="Accept" text="Accept"/>
							<Button type="Reject" text="Reject"/>
							<Button type="Transparent" text="Edit"/>
							<Button type="Transparent" text="Delete"/>
						</OverflowToolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
