<mvc:View xmlns:layout="sap.ui.layout"
    controllerName="actions.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
						<layout:FixFlex vertical="false" >
							<layout:fixContent>
								<Text text="hello world"></Text>
							</layout:fixContent>
							<layout:fixContent>
								<Text class="column1" text="This container is flexible and it will adapts its size to fill the remaining size in the FixFlex control" />
							</layout:fixContent>
						</layout:FixFlex>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
