<mvc:View xmlns:f="sap.f"
    controllerName="sample.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
	height="100%"
    displayBlock="true"
    xmlns="sap.m">
	<Shell id="shell">
		<f:FlexibleColumnLayout id="flexibleColumnLayout" backgroundDesign="Solid">
			<f:beginColumnPages>
				<mvc:XMLView id="beginPage" viewName="sample.view.Master"></mvc:XMLView>
			</f:beginColumnPages>
			<f:midColumnPages>
				<mvc:XMLView id="midPage" viewName="sample.view.Detail"></mvc:XMLView>
			</f:midColumnPages>
		</f:FlexibleColumnLayout>
	</Shell>
</mvc:View>
